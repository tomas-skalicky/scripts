#!/usr/bin/env bash
#
# Based on https://www.virtualbox.org/wiki/Linux_Downloads
#
#author      :Tomas Skalicky <skalicky.tomas@gmail.com>
#===============================================================================

#-------------------------------------------------------------------------------

configure_virtualbox_apt_sources() {
    local -r keyring_file_name=virtualbox.gpg
    local -r keyring_file_path=${keyrings_home:?}/$keyring_file_name
    #~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    local file_contents
    set +e
    read -r -d '' file_contents <<- EOF
	# Generated by Tomas' setup scripts.
	deb   [arch=$(dpkg --print-architecture) signed-by=$keyring_file_path]   http://download.virtualbox.org/virtualbox/debian   ${current_ubuntu_distribution_name:?}   contrib
	EOF
    set -e
    set_file_contents \
                      /etc/apt/sources.list.d/virtualbox.list \
                      "$file_contents"
    #~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    aptkey_add https://www.virtualbox.org/download/oracle_vbox_2016.asc "$keyring_file_name"
}

#-------------------------------------------------------------------------------

virtualbox_packages_to_install=(
    dkms
    virtualbox-qt
    xserver-xorg-core-lts-vivid
)

#-------------------------------------------------------------------------------

install_virtualbox() {
    aptget_update
    aptget_install "${virtualbox_packages_to_install[@]}"
}

#-------------------------------------------------------------------------------

main() {
    configure_virtualbox_apt_sources
    install_virtualbox
}

#-------------------------------------------------------------------------------

main


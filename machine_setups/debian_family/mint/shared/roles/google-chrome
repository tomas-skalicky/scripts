#!/usr/bin/env bash
#author      :Tomas Skalicky <skalicky.tomas@gmail.com>
#===============================================================================

#-------------------------------------------------------------------------------

configure_chrome_apt_sources() {
    local -r keyring_file_name=google-chrome.gpg
    local -r keyring_file_path=${keyrings_home:?}/$keyring_file_name
    #~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    local file_contents
    set +e
    read -r -d '' file_contents <<- EOF
	# Generated by Tomas' setup scripts.
	deb   [Signed-By=$keyring_file_path,Architectures=amd64]   http://dl.google.com/linux/chrome/deb/   stable   main
	EOF
    set -e
    set_file_contents \
                      /etc/apt/sources.list.d/google-chrome.list \
                      "$file_contents"
    #~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    aptkey_add https://dl-ssl.google.com/linux/linux_signing_key.pub "$keyring_file_name"
}

#-------------------------------------------------------------------------------

chrome_packages_to_install=(
    google-chrome-stable
)

#-------------------------------------------------------------------------------

install_chrome_packages() {
    aptget_update
    aptget_install "${chrome_packages_to_install[@]}"
}

#-------------------------------------------------------------------------------

main() {
    configure_chrome_apt_sources
    install_chrome_packages
}

#-------------------------------------------------------------------------------

main


#!/usr/bin/env bash
#
# Typora Markdown Editor
#
#author      :Tomas Skalicky <skalicky.tomas@gmail.com>
#===============================================================================

#-------------------------------------------------------------------------------

configure_typora_apt_sources() {
    local -r keyring_file_name=typora.gpg
    local -r keyring_file_path=${keyrings_home:?}/$keyring_file_name
    #~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    local file_contents
    set +e
    read -r -d '' file_contents <<- EOF
	# Generated by Tomas' setup scripts.
	deb   [arch=$(dpkg --print-architecture) signed-by=$keyring_file_path]   https://typora.io/linux   ./
	EOF
    set -e
    set_file_contents \
                      /etc/apt/sources.list.d/typora.list \
                      "$file_contents"
    #~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    aptkey_add https://typora.io/linux/public-key.asc "$keyring_file_name"
}

#-------------------------------------------------------------------------------

typora_packages_to_install=(
    typora
)

#-------------------------------------------------------------------------------

install_typora() {
    aptget_update
    aptget_install "${typora_packages_to_install[@]}"
}

#-------------------------------------------------------------------------------

main() {
    configure_typora_apt_sources
    install_typora
}

#-------------------------------------------------------------------------------

main


#!/usr/bin/env bash
#author      :Tomas Skalicky <skalicky.tomas@gmail.com>
#===============================================================================

#-------------------------------------------------------------------------------

docker_prerequisite_packages_to_install=(
    apt-transport-https
    ca-certificates
    software-properties-common
)

install_docker_prerequisite_packages() {
    aptget_install "${docker_prerequisite_packages_to_install[@]}"
}

#-------------------------------------------------------------------------------

configure_docker_apt_sources() {
    local -r keyring_file_name=docker.gpg
    local -r keyring_file_path=${keyrings_home:?}/$keyring_file_name
    #~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    local file_contents
    set +e
    read -r -d '' file_contents <<- EOF
	# Generated by Tomas' setup scripts.
	deb   [Signed-By=$keyring_file_path,Architectures=amd64]   https://download.docker.com/linux/ubuntu   ${current_ubuntu_distribution_name:?}   stable
	EOF
    set -e
    set_file_contents \
                      /etc/apt/sources.list.d/docker.list \
                      "$file_contents"
    #~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    aptkey_add https://download.docker.com/linux/ubuntu/gpg "$keyring_file_name"
}

#-------------------------------------------------------------------------------

docker_packages_to_install=(
    docker-ce
)

#-------------------------------------------------------------------------------

install_docker() {
    aptget_update
    aptget_install "${docker_packages_to_install[@]}"
}

#-------------------------------------------------------------------------------

configure_docker_for_non_root_user() {
    usermod --append --groups docker "${username:?}"
}

#-------------------------------------------------------------------------------

main() {
    install_docker_prerequisite_packages
    configure_docker_apt_sources
    install_docker
    configure_docker_for_non_root_user
}

#-------------------------------------------------------------------------------

main

